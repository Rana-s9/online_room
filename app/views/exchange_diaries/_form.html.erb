<%= form_with model: @exchange_diary, url: room_exchange_diaries_path(@room), local: true, data: { turbo: false } do |f| %>
  <% if @exchange_diary.errors.any? %>
    <div class= "bg-beige/30 text-matcha/75 font-bold">
      <ul class="list-disc">
        <% @exchange_diary.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-light-gray/75 p-4 rounded shadow mb-4">
    <div class="text-sm text-dark-gray"><%= Time.current.strftime("%y/%m/%d") %></div>
    <%= f.text_area :body, placeholder: t("views.diary.your_day"), rows: 5, class: "w-full p-2 mt-2 rounded text-dark-gray bg-beige" %>
    <div class="flex justify-center">
      <%= f.submit @exchange_diary.persisted? ? t("buttons.update") : t("views.diary.write"), class: "bg-light-blue text-dark-gray px-4 py-2 mt-2 rounded hover:bg-light-blue/80 transition" %>
    </div>
  </div>
<% end %>
