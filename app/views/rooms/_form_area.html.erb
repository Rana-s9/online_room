<%= form_with(model: @area,  local: true ) do |f| %>
  <div class="bg-light-gray/75 p-4 rounded shadow mb-4">
    <%= f.label :city, t('views.area.rule'), class: "text-sm text-dark-gray" %>
    <%= f.text_field :city, placeholder: t('views.area.example'), class: "bg-light-gray w-full p-2 border rounded text-gray" %>
    <div class="flex justify-center">
      <%= f.submit t("buttons.register^"), class: "bg-light-blue text-dark-gray px-4 py-2 mt-2 rounded hover:bg-light-blue/80 transition" %>
    </div>
    <div class="text-gray text-right">*いずれもあとで変更可</div>
  </div>
<% end %>