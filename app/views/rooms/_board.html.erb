<div class="bg-white shadow p-4 fixed top-[420px] left-4 w-[200px] h-[300px] overflow-y-auto">
  <% if @whiteboards.empty? %>
    <p class="text-dark-gray text-center text-sm">伝言はまだありません</p>
  <% else %>
    <% @whiteboards.each do |board| %>
      <div class="mb-4 border-b border-gray-200 pb-2 text-sm text-dark-gray">
        <% if board.user == current_user %>
            <div
                data-controller="board"
                data-board-room-id-value="<%= @room.id %>"
                data-board-target="board"
                data-action="keydown->board#insertBreak input->board#save"
                contenteditable="true"
                class="min-h-[200px] whitespace-pre-wrap focus:outline-none"
            >
            <%= h(@whiteboard&.body || "") %>
            </div>
        <% else %>
          <%= board.body %>
        <% end %>
        <p>
          住民:
          <span class="<%= board.user == current_user ? 'text-dark-gray font-bold' : '' %>">
            <%= board.user.name %>
          </span>
        </p>
        <p>伝言時：<%= board.updated_at.strftime("%m月%d日") %></p>
      </div>
    <% end %>
  <% end %>
</div>
