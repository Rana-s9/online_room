<h1><%= t("activerecord.attributes.room.owner") %></h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 bg-light-gray/75 ">
  <% @rooms.each do |room| %>
    <div class="text-dark-gray rounded-lg shadow-md p-6">
      <span class="<%= "underline" if room.user == current_user %>">
        <p><%= t("activerecord.attributes.room.house_name") %><i class="fa-solid fa-house-user text-light-blue"></i>:<%= link_to room.name, room_path(room), data: { turbo: false }, class: "text-matcha font-bold hover:text-matcha/60" %></p>
      </span>
      <% if room.roommates.present? %>
        <p><%= t("activerecord.attributes.room.roommate") %>:
          <% room.roommates.each do |member| %>
            <span class="<%= 'text-blue font-bold' if member == current_user %>">
              <%= member.name %><%= ',' unless member == room.roommates.last %>
            </span>
          <% end %>
        </p>
        <% if room.user == current_user %>
          <p><%= t("activerecord.attributes.room.registration") %>：
          <%= room.created_at.strftime("%y/%m/%d") %>
        <% else %>
          <p><%= t("activerecord.attributes.room.move_in") %>：
          <% invitation = @invitation_map[room.id] %>
          <%= invitation ? invitation.created_at.strftime("%y/%m/%d") : "不明" %>
        <% end %>
        </p>
      <% else %>
        <% if room.user == current_user %>
          <p><%= t("activerecord.attributes.room.roommate") %>：<%= current_user.name %>
          <p><%= t("activerecord.attributes.room.registration") %>：
            <%= room.created_at.strftime("%y/%m/%d") %>
          </p>
          <h1 class="text-brown font-bold"><%= t("activerecord.attributes.room.living_alone") %></h1>
        <% end %>
      <% end %>
        <div class= "text-center">
          <%= link_to t('activerecord.attributes.room.return'), room_path(room, from_home_button: 'true'),
            id: "blue-door-#{room.id}",
            class: "door-button bg-light-blue text-dark-gray px-4 py-2 mt-2 rounded hover:bg-light-blue/80 transition"
            %>
        </div>
    </div>
  <% end %>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    const button = document.getElementById("room-form-button");
    const form = document.getElementById("room-form");

    if (button && form) {
        button.addEventListener("click", (e) => {
        e.preventDefault();
        form.classList.remove("hidden");
        button.classList.add("hidden");
        });
    }
    });
</script>