<div class="container fixed top-[80px] left-1/2 transform -translate-x-1/2 z-50 p-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg">
      <h1 class="text-2xl text-matcha font-bold mb-6"><%= t('devise.registrations.sign_up') %></h1> 
      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
        <% if flash[:alert] %>
          <ul class="list-disc pl-5 space-y-1">
            <div id="flash_alert" class="bg-yellow/50 text-matcha font-semifold p-4 rounded mb-4">
              <li><%= flash[:alert] %></li>
            </div>
          </ul>
        <% end %>
        <% if flash[:notice] %>
          <div id="flash_notice" class="bg-green-100/50 text-matcha p-4 rounded mt-4">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <%= render "devise/registrations/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-matcha" %>
          <%= f.text_field :name, class: "bg-matcha/20 mt-1 mb-6 block w-full px-3 py-2 border border-matcha rounded-md shadow-sm focus:outline-none focus:ring-matcha focus:border-matcha text-matcha" %>
        </div>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-matcha" %>
          <%= f.email_field :email, class: "bg-matcha/20 mt-1 mb-6 block w-full px-3 py-2 border border-matcha rounded-md shadow-sm focus:outline-none focus:ring-matcha focus:border-matcha text-matcha" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-matcha" %>
          <%= f.password_field :password, class: "bg-matcha/20 mt-1 mb-6 block w-full px-3 py-2 border border-matcha rounded-md shadow-sm focus:outline-none focus:ring-matcha focus:border-matcha text-matcha" %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-matcha" %>
          <%= f.password_field :password_confirmation, class: "bg-matcha/20 mt-1 mb-6 block w-full px-3 py-2 border border-matcha rounded-md shadow-sm focus:outline-none focus:ring-matcha focus:border-matcha text-matcha" %>
        </div>
        <%= f.submit t('devise.registrations.sign_up'), class: "w-full mb-6 bg-matcha/75 hover:bg-blue/75 text-white font-bold py-2 px-4 rounded-md shadow-md transition",
        id: "blue-door" %>
      <% end %>
      <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: "text-matcha" %>
      <%= link_to t('devise.shared.links.forgot_your_password'), new_user_password_path, class: "text-matcha" %>
    </div>
  </div>
</div>

<div class="relative w-full h-[calc(100vh-112px)] overflow-hidden">
  <canvas id="three-canvas" class="w-full h-full block"></canvas>
</div>

<%= javascript_include_tag "door2" %>