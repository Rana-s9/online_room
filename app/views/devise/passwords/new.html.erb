<div class="container fixed top-[80px] left-1/2 transform -translate-x-1/2 z-50 p-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg">
      <h2 class="text-matcha text-xl font-bold mb-6"><%= t('devise.shared.links.forgot_your_password') %></h2>

      <% if flash[:alert] %>
        <ul class="list-disc pl-5 space-y-1">
          <div id="flash_alert" class="bg-yellow/50 text-matcha font-semifold p-4 rounded mb-4">
            <li><%= flash[:alert] %></li>
          </div>
        </ul>
      <% end %>

      <% if flash[:notice] %>
        <div id="flash_notice" class="bg-green-100/50 text-matcha p-4 rounded mt-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-matcha" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-matcha/20 mt-1 mb-6 block w-full px-3 py-2 border border-matcha rounded-md shadow-sm focus:outline-none focus:ring-matcha focus:border-matcha text-matcha" %>
        </div>

        <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'),
          class: "w-full mb-6 bg-matcha/75 hover:bg-blue/75 text-white font-bold py-2 px-4 rounded-md shadow-md transition" %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
