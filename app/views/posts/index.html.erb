<div class="relative min-h-screen">
  <div class="container mx-auto px-4 py-8 mt-2">  
    <h1 class= "text-matcha/75 bg-light-gray/40 p-4 font-semibold rounded-lg shadow-lg text-sm md:text:md">
      <ul class="list-disc pl-5">
        <li><%= t("views.post.description")%></li>
        <li><%= t("views.post.description2")%></li>
      </ul>
    </h1>
    <% if mobile_device? %>
      <div class="flex flex-col md:flex-row justify-center gap-8 mt-4 px-4">
        <%= render 'post' %>
      </div>
    <% else %>
      <div class="flex gap-8 mt-8 px-4">
        <%= render 'post' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to t("buttons.new"), new_post_path, class: "bg-blue/75 p-4 rounded shadow mb-4 mt-2 hover:bg-blue-30 transition text-dark-gray" %>
    </div>
  </div>
</div>