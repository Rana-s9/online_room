<div class="field">
    <%= f.label :mental_state, t("views.state_calendar.mental_state"), class: "text-dark-gray" %><br>
    <%= f.select :mental_state, 
        [
        [t("views.state_calendar.amazing"), "🥳"],
        [t("views.state_calendar.good"), "😊"],
        [t("views.state_calendar.bit_off"), "😐"],
        [t("views.state_calendar.down"), "😭"],
        [t("views.state_calendar.mental_sos"), "😣"]
        ], 
        { prompt: t("views.state_calendar.select") }, class: "bg-matcha/65 text-beige py-2 pl-3 pr-10 rounded w-full focus:ring-2 focus:ring-matcha" %>
</div>

<div class="field">
    <%= f.label :physical_state, t("views.state_calendar.physical_state"), class: "text-dark-gray" %><br>
    <%= f.select :physical_state, 
        [
        [t("views.state_calendar.energetic"), "💃"],
        [t("views.state_calendar.fine"), "🚶‍♀️"],
        [t("views.state_calendar.sluggish"), "🧍‍♀️"],
        [t("views.state_calendar.awful"), "🛌"],
        [t("views.state_calendar.physical_sos"), "🤒"]
        ], 
        { prompt: t("views.state_calendar.select") }, class: "bg-matcha/65 text-beige py-2 pl-3 pr-10 rounded w-full focus:ring-2 focus:ring-matcha" %>
</div>