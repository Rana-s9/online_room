<div class="field">
    <%= f.label :mental_state, "心の状態" %><br>
    <%= f.select :mental_state, 
        [
        ["🥳 : とても元気", "🥳"],
        ["☺ : 元気", "☺"],
        ["😐 : 少しもやっとしている", "😐"],
        ["😭 : 激しい落ち込み・涙が出る", "😭"],
        ["😣 : SOS / 相談に乗ってほしい", "😣"]
        ], 
        prompt: "一番近い状態を選ぶ" %>
</div>

<div class="field">
    <%= f.label :physical_state, "体の状態" %><br>
    <%= f.select :physical_state, 
        [
        ["💃 : エネルギッシュ", "💃"],
        ["🚶‍♀️ : 元気", "🚶‍♀️"],
        ["🧍‍♀️ : 少しだるい", "🧍‍♀️"],
        ["🛌 : とても辛くて動けない", "🛌"],
        ["🤒 : SOS / 声をかけてほしい", "🤒"]
        ], 
        prompt: "一番近い状態を選ぶ" %>
</div>